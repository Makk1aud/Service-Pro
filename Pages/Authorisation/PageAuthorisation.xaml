<Page x:Class="Coursework.Pages.Authorisation.PageAuthorisation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Coursework.Pages.Authorisation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuthorisation">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Введите ваш код"
                       FontSize="26pt"/>
            <PasswordBox Name="PasswordBoxCode" 
                    Height="35"
                     Width="200"
                     Margin="5"/>
            <Button Name="ButtonLogin"
                    Content="Войти"
                    Height="30"
                    Width="100"
                    Margin="5"
                    Click="ButtonLogin_Click"/>
        </StackPanel>
    </Grid>
</Page>
