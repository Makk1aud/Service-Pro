<Page x:Class="Coursework.Pages.Expert.PageExpertLeftPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Coursework.Pages.Expert"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="210"
      Title="PageExpertLeftPanel">

    <Grid Background="DarkSalmon">
        <StackPanel VerticalAlignment="Top"
                    HorizontalAlignment="Left">
            <Button Name="ButtonPersonalKabinet"
                    Content="Личный кабинет"
                    Click="ButtonPersonalKabinet_Click"
                    Style="{StaticResource ButtonsLeftPanel}"/>
            <Button Name="ButtonListOfProducts"
                    Content="Список товаров"
                    Click="ButtonListOfProducts_Click"
                    Style="{StaticResource ButtonsLeftPanel}"/>

            <Button Name="ButtonSignOut"
                    Content="Выйти с аккаунта"
                    Click="ButtonSignOut_Click"
                    Style="{StaticResource ButtonsLeftPanel}"/>
        </StackPanel>
    </Grid>
</Page>
